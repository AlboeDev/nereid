{
  "name": "nereid",
  "version": "0.0.0",
  "description": "Mermaid Transpiler",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:build && npm run transpile && npm run compile",
    "clean": "rimraf ./build ./dist ./docs ./temp",
    "clean:build": "rimraf ./build ./dist",
    "clean:compile": "rimraf ./build",
    "clean:docs": "rimraf ./docs",
    "clean:npm": "rimraf ./node_modules",
    "clean:temp": "rimraf ./temp",
    "clean:transpile": "rimraf ./dist",
    "compile": "rollup -c ./rollup.config.js",
    "docs:api:build": "npm run docs:api:clean && npm run docs:api:extract && npm run docs:api:generate",
    "docs:api:clean": "rimraf ./temp/docs/api ./docs/api",
    "docs:api:extract": "api-extractor run -c ./api-extractor.json",
    "docs:api:generate": "api-documenter markdown -i ./temp/docs/api/ -o ./docs/api",
    "docs:design:build": "node ./design/index.js",
    "docs:build": "npm run docs:api:build",
    "docs:clean": "npm run docs:api:clean",
    "lint": "eslint",
    "test": "jest",
    "transpile": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlboeDev/nereid.git"
  },
  "author": "Alboe Development",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlboeDev/nereid/issues"
  },
  "homepage": "https://github.com/AlboeDev/nereid#readme",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@microsoft/api-documenter": "^7.8.10",
    "@microsoft/api-extractor": "^7.8.10",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.21.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsdoc": "^27.0.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.14.0",
    "typescript": "^3.9.5"
  }
}
